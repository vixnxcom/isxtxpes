    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/express/**/*"
    ],


 "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },


     "icon": "electron/icon.ico"},


    "mac": {
      "icon": "build/icon.icns"
    },
    "linux": {
      "icon": "build/icon.png"
    },

      "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Isotxpes ERP"
    }
